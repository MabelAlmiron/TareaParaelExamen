<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editNombre"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/escribaNombre" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTelefono"
            android:layout_below="@+id/editEdad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/escribaTelefono" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editEdad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/escribaEdad"
            android:layout_below="@+id/editNombre" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butnIngresar"
            android:layout_marginTop="49dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:hint="@string/butnGuardar"
            android:layout_below="@+id/editNombre" />

    </RelativeLayout>
</RelativeLayout>
